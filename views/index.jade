  script(type='text/javascript').
    function myFunction() {
      var x = document.getElementById("collapse");
      var y = document.getElementById("navbar");
      if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
        y.className = y.className.replace(" w3-top", "");
      } else {
        x.className = x.className.replace(" w3-show", "");
        y.className += " w3-top";
      }
    }
    var carouselIndex = 0;
    carousel();
    function carousel() {
        var i;
        var carouselSlides = document.getElementsByClassName('carouselSlides');
        for (i = 0; i < carouselSlides.length; i++) {
            carouselSlides[i].style.display = 'none';
        }
        carouselIndex++;
        if (carouselIndex > carouselSlides.length) {
            carouselIndex = 1;
        }
        carouselSlides[carouselIndex-1].style.display = 'block';
        setTimeout(carousel, 5000);
    }